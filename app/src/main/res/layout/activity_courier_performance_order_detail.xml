<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorThemeBackground_1"
    tools:context="com.xstore.tms.android.ui.performance.CourierPerformanceOrderDetailActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorThemeBackground_1">
    <!-- 订单详情 -->
    <LinearLayout
        android:id="@+id/ll_delivery_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@color/corner_color"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6"
            >
            <TextView
                style="@style/text_label"
                android:text="运单号："
                />
            <TextView
                android:id="@+id/tv_do_no"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginBottom="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="收货人："
                />
            <TextView
                android:id="@+id/tv_do_consignee"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="电　话："
                />
            <TextView
                android:id="@+id/tv_do_phone_number"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="地　址："
                />
            <TextView
                android:id="@+id/tv_do_address"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginTop="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="运单件数："
                />
            <TextView
                android:id="@+id/tv_do_count"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginBottom="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="下单时间："
                />
            <TextView
                android:id="@+id/tv_do_time"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_6"
            >
            <TextView
                android:id="@+id/tv_do_complete_time_label"
                style="@style/text_label"
                android:text="妥投时间："
                />
            <TextView
                android:id="@+id/tv_do_complete_time"
                style="@style/text_content"
                />
        </LinearLayout>
    </LinearLayout>
    <!-- 取件详情 -->
    <LinearLayout
        android:id="@+id/ll_return_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@color/corner_color"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6"
            >
            <TextView
                style="@style/text_label"
                android:text="取件单号："
                />
            <TextView
                android:id="@+id/tv_ro_no"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginBottom="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="收货人："
                />
            <TextView
                android:id="@+id/tv_ro_consignee"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="电　话："
                />
            <TextView
                android:id="@+id/tv_ro_phone_number"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="地　址："
                />
            <TextView
                android:id="@+id/tv_ro_address"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginTop="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="取件数量："
                />
            <TextView
                android:id="@+id/tv_ro_count"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginBottom="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_6"
            >
            <TextView
                style="@style/text_label"
                android:text="取件完成时间："
                />
            <TextView
                android:id="@+id/tv_ro_complete_time"
                style="@style/text_content"
                />
        </LinearLayout>
    </LinearLayout>
    <!-- 宅配详情 -->
    <LinearLayout
        android:id="@+id/ll_home_delivery_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@color/corner_color"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6"
            >
            <TextView
                style="@style/text_label"
                android:text="宅配单号："
                />
            <TextView
                android:id="@+id/tv_home_no"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginBottom="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="收货人："
                />
            <TextView
                android:id="@+id/tv_home_consignee"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="电　话："
                />
            <TextView
                android:id="@+id/tv_home_phone_number"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="地　址："
                />
            <TextView
                android:id="@+id/tv_home_address"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginTop="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="运单件数："
                />
            <TextView
                android:id="@+id/tv_home_count"
                style="@style/text_content"
                />
        </LinearLayout>
        <View style="@style/SplitLineStyle" android:layout_marginBottom="@dimen/dp_6" ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="下单时间："
                />
            <TextView
                android:id="@+id/tv_home_time"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_home_complete_time_label"
                style="@style/text_label"
                />
            <TextView
                android:id="@+id/tv_home_complete_time"
                style="@style/text_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_refuse_cause"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/text_label"
                android:text="拒收原因："
                />
            <TextView
                android:id="@+id/tv_refuse_cause"
                style="@style/text_content"
                />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/SplitLineStyle" android:layout_marginTop="@dimen/dp_6"></View>
</LinearLayout>

    <LinearLayout
        android:id="@+id/loadingviewe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorThemeBackground_1"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"/>


    </LinearLayout>
</FrameLayout>