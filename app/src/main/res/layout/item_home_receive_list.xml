<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_item_delivery"
              android:orientation="vertical"
              android:paddingEnd="@dimen/dp_10"
              android:paddingStart="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/tv_order_id"
            style="@style/text_label"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:layout_marginBottom="@dimen/dp_16"
            android:id="@+id/tv_delivery_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_id"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/sp_16"/>

        <CheckBox
            android:id="@+id/cb_check"
            android:clickable="false"
            android:layout_marginTop="@dimen/dp_10"
            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_appbar_split_line"/>

    <TextView
        android:id="@+id/tv_consignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:drawablePadding="@dimen/dp_10"
        android:drawableStart="@drawable/ic_consignee"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/tv_mobile_phone"
        style="@style/text_label"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_10"
        android:drawableStart="@drawable/ic_phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_address_location"/>

        <TextView
            android:id="@+id/tv_address"
            style="@style/text_label"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>